<!DOCTYPE html>

<% for(var i=follows.length-1; i>=0; i--){ %>
	<% var follow = follows[i] %>
	<% if (follow.auth.username != user.auth.username) { %>
		<hr>
		<div class="follow">
			<b><%= follow.auth.first %> <%= follow.auth.last %></b> <i>@<%= follow.auth.username %></i>
			<% if (user.follow.following.indexOf(follow._id.toString()) == -1) { %>
				<form name="input" action="follow" method="post" id="follow">
					<button type="submit" class="btn btn-default btn-xs">Follow  <span class="glyphicon glyphicon-plus"></span></button>
					<input type="hidden" name="follow_id" value=<%= follow._id.toString()%>>
				</form>
			<% } else { %>
				<form name="input" action="unfollow" method="post" id="unfollow">
					<button type="submit" class="btn btn-default btn-xs">Unfollow  <span class="glyphicon glyphicon-minus"></span></button>
					<input type="hidden" name="follow_id" value=<%= follow._id.toString()%>>
				</form>
			<% } %>
		</div>
	<% } %>
<% } %>