<!DOCTYPE html>

<% for(var i=tweets.length-1; i>=0; i--){ %>
	<% var tweet = tweets[i] %>

	<% if ((tweet.author._id.toString() == user._id.toString()) || (user.follow.following.indexOf(tweet.author._id.toString()) != -1)) { %>

	<hr>
	<div class="tweet">
		<b><%= tweet.author.auth.first %> <%= tweet.author.auth.last %></b>
		<i>@<%= tweet.author.auth.username %></i>: <br>
		<%= tweet.text %>

		<% console.log(user.tweet.favorites) %>
		<% console.log(tweet._id.toString()) %>
		<% console.log(user.tweet.favorites.indexOf(tweet._id.toString())) %>

		<% if (user.tweet.favorites.indexOf(tweet._id.toString()) == -1) { %>

			<form name="input" action="favorite" method="post" id="favorite">
				<button type="submit" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-star"></span></button>
				<input type="hidden" name="tweet_id" value=<%= tweet._id.toString()%>>
			</form>

		<% } else { %>

			<form name="input" action="unfavorite" method="post" id="unfavorite">
				<button type="submit" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-star"></span></button>
				<input type="hidden" name="tweet_id" value=<%= tweet._id.toString()%>>
			</form>

		<% } %>


		<% if (user != null) { %>
			<% if (tweet.author._id.toString() == user._id.toString()) { %>
				<form name="input" action="edit" method="post" id="edit">
					<button type="submit" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
					<input type="hidden" name="tweet_id" value=<%= tweet._id.toString()%>>
				</form>
				<form name="input" action="delete" method="post" id="delete">
					<button type="submit" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-trash"></span></button>
					<input type="hidden" name="tweet_id" value=<%= tweet._id.toString()%>>
				</form>
			<% } %>
		<% } %>
	</div>

	<% } %>

<% } %>